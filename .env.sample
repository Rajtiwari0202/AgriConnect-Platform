# App Configuration
NODE_ENV=development
PORT=8080
CLIENT_URL=http://localhost:5173
SERVER_URL=http://localhost:8080
SESSION_SECRET=change_me_to_secure_random_string

# Database Configuration
# Choose PostgreSQL for production; SQLite supported for development via Drizzle
DATABASE_URL=postgresql://user:pass@host:5432/agriconnect
# For SQLite development: DATABASE_URL=sqlite:./dev.db

# Stripe India Configuration
# Get these from https://dashboard.stripe.com/test/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# File Storage Configuration
# Directory for user uploads (images, documents)
UPLOAD_DIR=uploads

# Company & Policy Configuration
COMPANY_NAME=AgriConnect
SUPPORT_EMAIL=support@agriconnect.in
# GST rate (0% for agricultural services, may change based on classification)
GST_RATE=0

# Security Configuration
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=12

# External API Keys (for future integrations)
# Weather API key for crop advisory
WEATHER_API_KEY=your_weather_api_key_here
# Government schemes API (if available)
GOV_SCHEMES_API_KEY=your_gov_api_key_here